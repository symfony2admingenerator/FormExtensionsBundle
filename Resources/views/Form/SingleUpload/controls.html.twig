<div class="singleupload-controls-wrapper">
    <div class="btn-wrapper">
        <button type="button" class="btn btn-warning cancel" style="display: none;">
            <i class="fa fa-ban"></i>
            <span> {{ 's2a_single_upload.button.cancel'|trans({}, 'AdmingeneratorFormExtensions') }}</span>
        </button>
    </div>
{% if downloadable %}
    <div class="btn-wrapper">
        {% set object = form.parent.vars.value %}
        {% set field = form.vars.name %}
        {% set src = image_asset(object, field) %}
        <a href="{{ src|raw }}" class="btn btn-info download" {% if form.vars.data|default is empty %}style="display: none;"{% endif %}>
            <i class="fa fa-download"></i> {{ 's2a_upload_collection.download'|trans({}, 'AdmingeneratorFormExtensions') }}
        </a>
    </div>
{% endif %}

{% if deleteable %}
    <div class="btn-wrapper">
        <button type="button" class="btn btn-danger delete" style="display: none;">
            <i class="fa fa-trash-o"></i>
            <span> {{ 's2a_single_upload.button.delete'|trans({}, 'AdmingeneratorFormExtensions') }}</span>
        </button>
    </div>
    <input type="hidden" id="{{ id ~ '_delete' }}" name="{{ form.parent.vars.full_name ~ '['~name~'][delete]' }}" value="0">
{% endif %}
</div>
